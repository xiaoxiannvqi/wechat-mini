<swiper class="swiper-style"  wx:if="{{imgUrls}}" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{item}}">
        <swiper-item>
            <image src="{{item}}" class="img-style" mode="scaleToFill"/>
        </swiper-item>
    </block>
</swiper>